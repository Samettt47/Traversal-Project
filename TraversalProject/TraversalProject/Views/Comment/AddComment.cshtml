
@if (User.Identity.IsAuthenticated) { 

<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir Yorum Bırakın</h4>
    <p class="mb-4">
        İşaretli alanları dolduramnız gerekmektedir.
    </p>
   
    <form method="post" asp-action="AddComment" asp-controller="Comment">
        <input type="hidden" name="AppuserId" value="@ViewBag.userID" class="form-control">
        <input type="hidden" name="DestinationId" value="@ViewBag.i" class="form-control">
        
        <div class="form-group">
            <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz" required=""
                      spellcheck="false"></textarea>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary" type="submit" id="btnsave">Yorum yap</button>
        </div>
    </form>
</div>
}

else
{
    <br />
    <h2>Yorum yapabilmek için üye olmanız gerekli. <a  href="/Login/SignUp/" class="btn btn-outline-success" style="margin-left:20px;">Hemen Üye olun</a> </h2>
   
}


<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>