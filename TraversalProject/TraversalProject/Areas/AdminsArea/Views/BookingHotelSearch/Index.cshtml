@model IEnumerable<BookingHotelSearchViewModel.Result>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    double score;
    
}

<h1>Booking Hotel Rezervasyon Sayfası</h1>

<h3>Arama Yapılan Şehir : Paris/Fransa</h3>

<table class="table table-stri*ped">
    <tr>
        <th>#</th>
        <th>Hotel Adı</th>
        <th>Otel Puanı</th>
        <th>Otel Değerlendirmesi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.hotel_name</td>
            @{ score = double.Parse(item.review_score.ToString()) / 10;}
            <td>@score</td>
            @{
                if (item.review_score_word == "Very good")
                {
                    <td>Çok İyi</td>
                }
                if (item.review_score_word == "Fabulous")
                {
                    <td>Harika</td>
                }
                if (item.review_score_word == "Good")
                {
                    <td>İyi</td>
                }
                if (item.review_score_word == "Superb")
                {
                    <td>İnanılmaz İyi</td>
                }
                if (item.review_score_word == "Pleasant")
                {
                    <td>Hoş</td>
                }
                if (item.review_score_word == "Poor")
                {
                    <td>Kötü</td>
                }
                if(string.IsNullOrEmpty(item.review_score_word))
                {
                    <td>Bulunamadı</td>
                }

              }
                      
              <td><a href="#" class="btn btn-outline-info">Detaylar</a></td>

        </tr>
     }
</table>

