@using EntityLayer.Concrete
@model List<Destination>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sitede Gör</th>
        <th>Sil</th>
        <th>Güncelle</th>
      
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.DestinationId</td>
    <td>@item.City</td>
    <td>@item.Price</td>
    <td>@item.Capasity</td>
    <td><a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-outline-info"> Sitede Gör </a></td>
    <td><a href="/AdminsArea/A_Destination/DeleDestination?id=@item.DestinationId" class="btn btn-outline-danger"> Sil </a></td>
    <td><a href="/AdminsArea/A_Destination/UpdateDestination?id=@item.DestinationId" class="btn btn-outline-success"> Güncelle </a></td>
  
</tr>
    }
</table>

<a href="/AdminsArea/A_Destination/AddDestination" class="btn btn-outline-primary">Yeni Tur Rotası</a>
