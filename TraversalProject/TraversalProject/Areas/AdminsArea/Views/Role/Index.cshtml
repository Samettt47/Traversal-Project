    @model List<AppRole>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
        int count = 0;
    }

    <h1>Rol Listesi</h1>

    @if (Model.Count > 0)
    {
        <table class="table table-bordered">    
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
                <th>Rolu Sil</th>
                <th>Rolu Güncelle</th>

            </tr>

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td><a href="/AdminsArea/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/AdminsArea/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                </tr>

            }

        </table>
    }
    else
    {
        <div class="alert alert-success">
            <span >Herhangi Bir Rol Bulunamadı</span>
        </div>

    }


    <td><a href="/AdminsArea/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Girişi</a></td>
