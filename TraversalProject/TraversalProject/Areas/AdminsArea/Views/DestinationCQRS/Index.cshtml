    @model List<GetAllDestinationQueryResult>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
        int count = 0;
    }

    <h2>CQRS Tur Rota Listesi</h2>
    <br />
    <br>

    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Şehir</th>
            <th>Gün-Gece</th>
            <th>Fiyat</th>
            <th>Kapasite</th> 
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.city</td>
                <td>@item.daynight</td>
                <td>@item.price ₺</td>
                <td>@item.capacisty</td>
                <td><a href="/AdminsArea/DestinationCQRS/DeleteDestination/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/AdminsArea/DestinationCQRS/GetDestination/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>

    <a href="/AdminsArea/DestinationCQRS/AddDestination/" class="btn btn-outline-primary">Yeni Tur Rotası Girişi</a>

