@model GetDestinationByIDQueryResult
@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CQRS İle Lokasyon Düzenleme Sayfası</h2>

<form method="post">
    
    <input type="hidden" asp-for="Destinationid" class="form-control" />

    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Gün-Gece</label>
    <input type="text" asp-for="Daynight" class="form-control" />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <button class="btn btn-outline-success">Tur Bilgilerini Güncelle</button>

</form>
