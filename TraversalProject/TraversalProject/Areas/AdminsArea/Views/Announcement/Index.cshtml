@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1> Duyuru Listesi </h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnnouncementId</td>
            <td>@item.AnnouncementTitle</td>
            <td>@item.AnnouncementContent</td>
            <td><a href="/AdminsArea/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/AdminsArea/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-info">Detaylar</a></td>

        </tr>
    }
</table>

<a href="/AdminsArea/Announcement/AddAnnouncement" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
