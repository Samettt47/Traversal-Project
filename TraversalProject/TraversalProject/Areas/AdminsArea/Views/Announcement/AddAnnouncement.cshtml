@model AnnouncementAddDto

@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1> Duyuru Ekleme Sayfası </h1>

<form method="post">

    <label>Duyuru Başlığı</label>
    <input type="text" class="form-control" asp-for="AnnouncementTitle" />
    <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
    <br />
    <label>Duyuru İçeriği</label>
    <input type="text" class="form-control" asp-for="AnnouncementContent" />
    <span asp-validation-for="AnnouncementContent" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-primary">Duyuruyu Oluştur</button>

</form>
