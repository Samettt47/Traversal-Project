@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>CQRS MediatR Rehber Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rehber Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a href="/AdminsArea/GuideMediatR/DeleteGuide/@item.GuideId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/AdminsArea/GuideMediatR/GetGuide/@item.GuideId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/AdminsArea/GuideMediatR/AddGuide" class="btn btn-outline-primary">Yeni Rehber Girişi</a>