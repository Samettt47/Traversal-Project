<div class="table-responsive" id="searchResult">

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Şehir</th>
                <th>Süre</th>
                <th>Kapasite</th>
                <th>Fiyat</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DestinationId</td>
                    <td>@item.City</td>
                    <td>@item.DayNight</td>
                    <td>@item.Capasity</td>
                    <td>@item.Price ₺</td>
                    <td><a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-outline-info">Detaylar</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>